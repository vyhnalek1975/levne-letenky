name: Levné letenky RSS

on:
  schedule:
    - cron: "0 6 * * *"   # spustí se každý den v 6:00 UTC (u nás 7:00 v létě)
  workflow_dispatch:       # možnost spustit ručně z GitHub Actions

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      - name: Nastavit Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.x"

      - name: Instalace knihoven
        run: pip install requests feedgen

      - name: Spustit generátor
        env:
          KIWI_API_KEY: ${{ secrets.KIWI_API_KEY }}
        run: python letenky.py

      - name: Commitnout změny
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "actions@github.com"
          git add letenky.xml
          git commit -m "Automatická aktualizace feedu" || echo "Žádné změny"
          git push
